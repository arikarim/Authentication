<% @posts.each do |post| %>
    <% if user_signed_in? %>
        <%= post.user.email %><br><br/>
        <%= post.title %><br><br/>
        <%= post.body %><br><br/>
    <% else %>
        <%= post.title %><br><br/>
        <%= post.body %><br><br/>
    <% end %>
        
<% end %>

<% if user_signed_in? %>
    <%= button_to 'sign out', destroy_user_session_path, method: :delete %>
<% else %>
    <%= button_to 'sign in', new_user_session_path %>
    <%= link_to 'sign up', new_user_registration_path %>
<% end %>