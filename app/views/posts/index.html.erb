<% @posts.each do |post| %>
    <%= post_info(post) %>
<% end %>

<% if user_signed_in? %>
    <%= button_to 'sign out', destroy_user_session_path, method: :delete %>
    <%= link_to 'new post', new_post_path, method: :delete %>
<% else %>
    <%= button_to 'sign in', new_user_session_path %>
    <%= link_to 'sign up', new_user_registration_path %>
<% end %>